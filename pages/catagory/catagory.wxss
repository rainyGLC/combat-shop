.catagory-container{
  height: 100%;
  display: flex;
  flex-direction: column;
}
.catagory-section{
  margin-bottom: 20px;
}
.scroll-tab{
  width: 100%;
  white-space:nowrap;
  border-bottom: 1px solid #ccc;
}
.tab-list{
  position:relative;
  display: flex;
}
.tab-item{
  width: 120rpx;
  height: 80rpx;
  background-color: #fff;
  text-align: center;
  line-height: 79rpx;
  font-size: 14px;
  flex:none;
}
.tab-line{
  width: 120rpx;
  position: absolute;
  left: 0;
  bottom: 0rpx;
  height: 9rpx;
  background-color:red;
  transition: all.3s;
}
.active{
  color: rgb(231, 76, 60);
  /*border-bottom: 2px solid rgb(231, 76, 60);*/
}
.recommend-list{
  margin-top:20px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  height: 600px;
}
.recommend-item{
  display: inline-block;
  width: 145px;
  margin-bottom: 30rpx;
  height: 245px;
  border-radius: 4px;
  cursor:pointer;
  background-color: rgb(255, 255, 255);
  box-shadow: 0 4px 7px rgba(0, 0, 0, 0.16), 0 2px 6px rgba(0, 0, 0, 0.23);
}
.recommend-card{
  width:145px;
  height: 145px;
  text-align: center;
}
.recommend-card .card-image{
  width: 100%;
  height: 100%;
}
.recommend-price{
  font-size:12px;
  color:#999;
  padding-left:10px;
}
.recommend-desc{
  font-size: 14px;
  color:#333;
  overflow: hidden;
}
.swiper-list{
  width: 100%;
  height: 800px;
}