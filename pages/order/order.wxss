.page-container{
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #e4e4e4;
}
.address-container{
  font-size: 16px;
  color: #333;
  line-height: 25px;
  padding: 10px;
  margin-bottom: 10px;
  background-color: #fff;
}

.goods-list{
  display: flex;
  flex-direction: column;
  background-color:#fff;
}
.goods-list .goods-item{
  width:100%;
  height: 90px;
  padding:10px;
  line-height: 90px;
  box-sizing: border-box;
  padding:0 10px;
  border-bottom: 1px solid #e4e4e4;

}
.goods-image{
  display: inline-block;
  vertical-align: top;
  width:70px;
  height: 70px;
  margin-top:10px;
  background-color: #ccc;
}
.goods-image-url{
  width:100%;
  height: 100%;
  
}
.goods-message{
  width:203px;
  margin-left: 20px;
  margin-top:10px;
  display: inline-block;
  vertical-align: top;
  font-size: 14px;
  line-height: 20px;
}
.goods-title{
  display: flex;
  justify-content: space-between;
  width:100%;
  height: 25px;
  margin-bottom: 10px;
}
.goods-desc{
  display: block;
  width: 170px;
  height: 15px;
  line-height: 15px;
  font-size: 12px;
  color: #333;
  font-weight: 400;
}
.goods-number{
  font-size: 14px;
  color: #333;
}
.goods-centent{
  display: flex;
  justify-content: space-between;

}
.goods-size, .goods-color{
  font-size: 12px;
}
.goods-preice{
  color:#d81e06;
}
.commodity-item{
  display: flex;
  justify-content: space-between;
  background: #fff;
  border-bottom: 1px solid #e4e4e4;
  padding:10px;
  font-size: 14px;
  line-height: 25px;
}
.leavea-message{
  margin-top:10px;
  padding-bottom: 45px;
  background-color: #fff;
}
.leavea-content{
  padding:10px;
  display: flex;
  flex-wrap: wrap;
}
.leavea-section{
  margin-left:20px;
  width: 240px;
  height: 60px;
  border:1px solid #e4e4e4;
}
.leavea-title{
  font-size: 14px;
  line-height: 25px;
  color:#333;
  overflow: hidden;

}
.cart-end{
  position:fixed;
  bottom: 0px;
  left: 0;
  display: flex;
  justify-content:space-between;
  width:100%;
  padding-left: 10px;
  height: 45px;
  line-height: 45px;
  border-top:1px solid #e4e4e4;
  background-color: #fff;
  box-sizing: border-box;
}
.cart-count{
  width: 120px;
}
.cart-number{
  font-size: 14px;
  color: #333;
  margin-right:10px;
}
.cart-price{
  font-size: 14px;
  color:#d81e06;
}
.cart-submit{
  width: 120px;
  text-align: center;
  background-color: #d81e06;
  color: #fff;
}
.number-count{
  display: flex;
  justify-content: space-between;
}




















